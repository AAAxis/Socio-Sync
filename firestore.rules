rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User activity collection - only authenticated users can access their own data
    match /user_activity/{userId} {
      // Users can only read and write their own activity data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Validate that no PII is being stored
      allow create: if request.auth != null 
        && request.auth.uid == userId
        && !('email' in resource.data)
        && !('name' in resource.data)
        && !('phone' in resource.data)
        && !('address' in resource.data)
        && !('personalInfo' in resource.data);
        
      allow update: if request.auth != null 
        && request.auth.uid == userId
        && !('email' in resource.data)
        && !('name' in resource.data)
        && !('phone' in resource.data)
        && !('address' in resource.data)
        && !('personalInfo' in resource.data);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
